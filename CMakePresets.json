{
    "version": 2,
    "cmakeMinimumRequired": 
    {
        "major": 3,
        "minor": 30,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "DebugBuild",
            "binaryDir": "${sourceDir}/build/Debug",
            "generator": "Ninja",
            "cacheVariables": 
            {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "TestBuild",
            "binaryDir": "${sourceDir}/build/Test",
            "generator": "Ninja",
            "cacheVariables" : 
            {
                "JASM_TEST_MODE": {
                    "type": "BOOL",
                    "value": "ON" 
                },
                "CMAKE_BUILD_TYPE": "Test",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "ReleaseBuild",
            "binaryDir": "${sourceDir}/build/Release",
            "generator": "Ninja",
            "cacheVariables": 
            {
                "USE_PIPELINES_OPT": {
                    "type": "BOOL",
                    "value":  "OFF"
                },

                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_COMPILER": "g++"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "DebugBuild",
            "configurePreset": "DebugBuild",
            "verbose": true,
            "targets": ["jasm"]
        },
        {
            "name": "TestBuild",
            "configurePreset": "TestBuild",
            "verbose": true,
            "targets": ["jasm"]
        },
        {
            "name": "ReleaseBuild",
            "configurePreset": "ReleaseBuild",
            "verbose": true,
            "targets": ["jasm"]
        }
    ]
}
